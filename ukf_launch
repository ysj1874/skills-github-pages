<launch>
  <!-- UKF 스캔 필터 -->
  <node pkg="turtlebot3_ukf_filter" type="ukf_scan_filter.py" name="ukf_scan_filter" output="screen">
    <param name="in_scan_topic"  value="/scan"/>
    <param name="out_scan_topic" value="/scan_ukf"/>
    <!-- 필요시 노이즈 파라미터 조정 -->
    <param name="process_noise_q" value="0.02"/>
    <param name="meas_noise_r"    value="0.05"/>
  </node>

  <!-- gmapping: scan -> /scan_ukf 로 리맵 -->
  <node pkg="turtlebot3_slam" type="turtlebot3_slam_gmapping" name="turtlebot3_slam_gmapping" output="screen">
    <remap from="scan" to="/scan_ukf"/>
  </node>

  <!-- RViz은 평소대로 -->
  <node pkg="rviz" type="rviz" name="rviz" output="screen"/>
</launch>
